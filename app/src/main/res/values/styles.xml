<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFF4BB6C</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow_texi</item>
        <item name="colorControlNormal">@color/yellow_texi</item>
    </style>

    <style name="progressbartheme" parent="AppTheme">
        <item name="colorAccent">@color/yellow_texi</item>
        <item name="android:color">@color/yellow_texi</item>
    </style>

    <style name="DialogAnimation" >
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="DialogUpDownAnim" parent="@android:style/Theme.Translucent.NoTitleBar">

        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/DialogSlideAnimation</item>
    </style>

    <style name="DialogSlideAnimation" >
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_in_left</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FormTextInputLayou" parent="TextAppearance.AppCompat">
